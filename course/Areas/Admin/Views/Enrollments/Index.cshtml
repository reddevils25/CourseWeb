@model IEnumerable<course.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content" style="margin-left:92px;">
    <div class="container-fluid pt-4 px-4" style="width:105%;">
        <div class="bg-light rounded p-4 shadow-sm">
            <h4 class="mb-4 text-primary">Quản lý học phí khóa học</h4>

            <table class="table table-bordered table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tên sinh viên</th>
                        <th>Khóa học</th>
                        <th>Ngày đăng ký</th>
                        <th>Học phí</th>
                        <th>Thanh toán</th>
                        <th>Ngày thanh toán</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.User?.FullName</td>
                            <td>@e.Course?.Title</td>
                            <td>@e.EnrollDate.ToString("dd/MM/yyyy")</td>
                            <td>@string.Format("{0:N0} ₫", e.Amount ?? e.Course?.Price)</td>
                            <td>
                                @if (e.IsPaid)
                                {
                                    <span class="badge bg-success">Đã thanh toán</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Chưa thanh toán</span>
                                }
                            </td>
                            <td>@(e.PaymentDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                            <td>
                                @if (!e.IsPaid)
                                {
                                    <form asp-action="UpdatePayment" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@e.EnrollmentId" />
                                        <button class="btn btn-success btn-sm">Xác nhận</button>
                                    </form>
                                }
                                <a asp-action="Edit" asp-route-id="@e.EnrollmentId" class="btn btn-primary btn-sm">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@e.EnrollmentId" class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
