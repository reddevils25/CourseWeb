@model course.Models.Course

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4" style="width: 200%;">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">Thêm khóa học</h6>
                    <form asp-action="Create">
                        <div class="mb-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Title" class="control-label">Tiêu đề</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class=" mb-3">
                            <label asp-for="Level" class="control-label">Độ khó</label>
                            <input asp-for="Level" class="form-control" />
                            <span asp-validation-for="Level" class="text-danger"></span>
                        </div>
                        <div class=" mb-3">
                            <label asp-for="CategoryId" class="control-label">Danh mục</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                                <option value="" selected>--[Chọn danh mục]--</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Thumbnail" class="control-label">Chọn Ảnh</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <button type="button" class="btn btn-success" onclick="openDialog()">Chọn ảnh</button>
                                </div>
                                <input type="text" class="form-control" id="file_input" asp-for="Thumbnail" aria-describedby="button-addon2" />
                            </div>
                            <span asp-validation-for="Thumbnail" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="control-label">Chi tiết</label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class=" mb-3">
                            <label asp-for="Price" class="control-label">Giá</label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class=" mb-3">
                            <label asp-for="Rating" class="control-label">Xếp hạng</label>
                            <input asp-for="Rating" class="form-control" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="form-group form check">
                            <label class="form-checked-input">
                                <input class="form-check-input" asp-for="IsFeatured" /> Nổi bật
                            </label>
                        </div>
                        <div class="form-group form check">
                            <label class="form-checked-input">
                                <input class="form-check-input" asp-for="IsNew" /> Mới
                            </label>
                        </div>
                        <div class="form-group form check">
                            <label class="form-checked-input">
                                <input class="form-check-input" asp-for="HasCertificate" /> Chứng chỉ
                            </label>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Thêm mới" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
