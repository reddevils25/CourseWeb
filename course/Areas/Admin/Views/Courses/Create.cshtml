@model course.Models.Course

@{
    ViewData["Title"] = "Thêm khóa học";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content" style="margin-left:160px;">
    <div class="container-fluid pt-4 px-4" style="width:105%;">
        <div class="bg-light rounded p-4">
            <h4 class="mb-4 text-primary">Thêm khóa học</h4>

            @* Hiển thị lỗi validation *@
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-action="Create" method="post">
                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label">Tiêu đề</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="InstructorId" class="form-label">Giảng viên</label>
                        <select asp-for="InstructorId" class="form-select" asp-items="ViewBag.InstructorId"></select>
                        <span asp-validation-for="InstructorId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CategoryId" class="form-label">Danh mục</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Price" class="form-label">Giá</label>
                        <input asp-for="Price" class="form-control" type="number" step="1000" min="0" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Level" class="form-label">Level</label>
                        <select asp-for="Level" class="form-select" asp-items="ViewBag.LevelList"></select>
                        <span asp-validation-for="Level" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Thumbnail" class="form-label">Thumbnail</label>
                        <input asp-for="Thumbnail" class="form-control" />
                        <span asp-validation-for="Thumbnail" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Alias" class="form-label">Alias</label>
                        <input asp-for="Alias" class="form-control" />
                        <span asp-validation-for="Alias" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Rating" class="form-label">Đánh giá</label>
                        <input asp-for="Rating" class="form-control" type="number" step="0.1" min="0" max="5" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 d-flex gap-3 mt-2">
                        <div class="form-check">
                            <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                            <label asp-for="IsFeatured" class="form-check-label">Nổi bật</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="IsNew" class="form-check-input" type="checkbox" />
                            <label asp-for="IsNew" class="form-check-label">Mới</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="HasCertificate" class="form-check-input" type="checkbox" />
                            <label asp-for="HasCertificate" class="form-check-label">Có chứng chỉ</label>
                        </div>
                    </div>

                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Thêm mới</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>


