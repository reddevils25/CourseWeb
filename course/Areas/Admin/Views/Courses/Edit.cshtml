@model course.Models.Course

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4" style="width: 180%;">
            <div class="col-sm-12 col-xl-8">
                <div class="bg-light rounded h-100 p-4 shadow-sm">
                    <h4 class="mb-4 text-primary">Sửa thông tin khóa học</h4>

                    <form asp-action="Edit" method="post">
                        @* ẩn ID để controller biết khóa học nào cần sửa *@
                        <input type="hidden" asp-for="CourseId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label">Tiêu đề</label>
                            <input asp-for="Title" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Giảng viên</label>
                            <select asp-for="InstructorId" class="form-select" asp-items="ViewBag.InstructorId"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Danh mục</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Level</label>
                            <select asp-for="Level" class="form-select" asp-items="ViewBag.LevelList"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Giá</label>
                            <input asp-for="Price" class="form-control" type="number" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Đánh giá</label>
                            <input asp-for="Rating" class="form-control" type="number" step="0.1" min="0" max="5" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Thumbnail</label>
                            <input asp-for="Thumbnail" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Alias</label>
                            <input asp-for="Alias" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="mb-3 d-flex gap-3">
                            <div class="form-check">
                                <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                                <label asp-for="IsFeatured" class="form-check-label">Nổi bật</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="IsNew" class="form-check-input" type="checkbox" />
                                <label asp-for="IsNew" class="form-check-label">Mới</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="HasCertificate" class="form-check-input" type="checkbox" />
                                <label asp-for="HasCertificate" class="form-check-label">Có chứng chỉ</label>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-success px-4">Cập nhật</button>
                            <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Quay lại</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
