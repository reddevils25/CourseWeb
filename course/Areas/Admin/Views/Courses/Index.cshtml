@model IEnumerable<course.Models.Course>

@{
    ViewData["Title"] = "Quản lý khóa học";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content" style="margin-left: 160px;">
    <div class="container-fluid pt-4 px-4" style="width:105%;">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0">Quản lý khóa học</h6>
                <a asp-action="Create" class="btn btn-success">Thêm mới</a>
            </div>
            <div class="no-border-box table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-dark">
                            <th scope="col">STT</th>
                            <th scope="col">Tiêu đề</th>
                            <th scope="col">Giảng viên</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Level</th>
                            <th scope="col">Ngày tạo</th>
                            <th scope="col">Nổi bật</th>
                            <th scope="col">Mới</th>
                            <th scope="col">Chứng chỉ</th>
                            <th scope="col">Rating</th>
                            <th scope="col">Học viên</th>
                            <th scope="col" style="width: 110px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@item.Instructor?.User?.FullName</td>
                                <td>@item.Price</td>
                                <td>@Html.DisplayFor(modelItem => item.Level)</td>
                                <td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                <td>@(item.IsFeatured ? "✓" : "")</td>
                                <td>@(item.IsNew ? "✓" : "")</td>
                                <td>@(item.HasCertificate ? "✓" : "")</td>
                                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                                <td>@Html.DisplayFor(modelItem => item.EnrollCount)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-primary btn-sm">Sửa</a>                                  
                                    <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
