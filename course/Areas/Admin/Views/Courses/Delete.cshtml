@model course.Models.Course

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4" style="width: 200%;">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <h4 class="mb-4 text-danger">Xóa khóa học</h4>
                    <h6 class="text-warning">Bạn có chắc chắn muốn xóa khóa học này không? Hành động này không thể hoàn tác!</h6>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">Tiêu đề</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Giảng viên</dt>
                        <dd class="col-sm-8">@Model.Instructor?.User?.FullName</dd>

                        <dt class="col-sm-4">Danh mục</dt>
                        <dd class="col-sm-8">@Model.Category?.Name</dd>

                        <dt class="col-sm-4">Level</dt>
                        <dd class="col-sm-8">@Model.Level</dd>

                        <dt class="col-sm-4">Giá</dt>
                        <dd class="col-sm-8">@Model.Price?.ToString("C0")</dd>

                        <dt class="col-sm-4">Đánh giá</dt>
                        <dd class="col-sm-8">@Model.Rating</dd>

                        <dt class="col-sm-4">Mô tả</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="CourseId" />
                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-lg border-0">
                                <i class="fas fa-trash-alt"></i> Xóa
                            </button>
                            <a asp-action="Index" class="btn btn-primary btn-lg rounded-pill shadow-lg border-0">
                                <i class="fas fa-undo"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
