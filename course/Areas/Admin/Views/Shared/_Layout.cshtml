@{
    Layout = null;
    var userId = Context.Session.GetInt32("UserId");
    var fullName = Context.Session.GetString("FullName") ?? "User";
    var role = Context.Session.GetString("Role") ?? "Student";
    var avatar = Context.Session.GetString("Avatar") ?? "~/admin/img/user.jpg";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@(role == "Admin" ? "Admin Dashboard" : "Instructor Dashboard")</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/admin/img/favicon.ico" rel="icon">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/admin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/admin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">

        <!-- Sidebar -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>Dashboard</h3>
                </a>

                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="@avatar" alt="Avatar" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">@fullName</h6>
                        <span>@(role == "Admin" ? "Admin" : "Giảng viên")</span>
                    </div>
                </div>

                <div class="navbar-nav w-100">
                    @if (role == "Admin")
                    {
                        <a asp-area="Admin" asp-controller="Students" asp-action="Index" class="nav-item nav-link"><i class="fa fa-users me-2"></i>Quản lý sinh viên</a>
                        <a asp-area="Admin" asp-controller="Instructors" asp-action="Index" class="nav-item nav-link"><i class="fa fa-chalkboard-teacher me-2"></i>Quản lý giảng viên</a>
                        <a asp-area="Admin" asp-controller="Courses" asp-action="Index" class="nav-item nav-link"><i class="fa fa-book me-2"></i>Quản lý khóa học</a>
                        <a asp-area="Admin" asp-controller="Enrollments" asp-action="Index" class="nav-item nav-link"><i class="fa fa-money-bill me-2"></i>Quản lý học phí</a>
                        <a asp-area="Admin" asp-controller="Assignments" asp-action="Index" class="nav-item nav-link"><i class="fa fa-tasks me-2"></i>Quản lý bài tập</a>
                        <a asp-area="Admin" asp-controller="Statistics" asp-action="Index" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Thống kê</a>
                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="nav-item nav-link"><i class="fa fa-user-cog me-2"></i>Quản lý người dùng</a>
                    }
                    else if (role == "Instructor")
                    {
                        <a asp-area="Admin" asp-controller="Courses" asp-action="Index" class="nav-item nav-link"><i class="fa fa-book me-2"></i>Khóa học của tôi</a>
                        <a asp-area="Admin" asp-controller="Assignments" asp-action="Index" class="nav-item nav-link"><i class="fa fa-tasks me-2"></i>Bài tập</a>
                        <a asp-area="Admin" asp-controller="Enrollments" asp-action="Index" class="nav-item nav-link"><i class="fa fa-user-graduate me-2"></i>Học viên</a>
                        <hr />
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link"><i class="fa fa-home me-2"></i>Trang người dùng</a>
                    }
                </div>

                <hr />

                <!-- Logout -->
                <a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-item nav-link text-danger">
                    <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                </a>

            </nav>
        </div>

        <!-- Content -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/lib/chart/chart.min.js"></script>
    <script src="~/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/admin/js/main.js"></script>
</body>
</html>
