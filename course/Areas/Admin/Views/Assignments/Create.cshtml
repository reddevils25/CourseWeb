@model course.Models.Assignment

@{
    ViewData["Title"] = "Thêm bài tập";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content" style="margin-left:150px;">
    <div class="container-fluid pt-4 px-4" style="width:105%;">
        <div class="bg-light rounded p-4">
            <h4 class="mb-4 text-primary">Thêm bài tập</h4>
            <form asp-action="Create" method="post">
                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="LessonId" class="form-label">Bài học</label>
                        <select asp-for="LessonId" class="form-select" asp-items="ViewBag.Lessons">
                            <option value="">-- Chọn bài học --</option>
                        </select>

                        <span asp-validation-for="LessonId" class="text-danger"></span>
                    </div>


                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label">Tiêu đề bài tập</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FilePath" class="form-label">File bài tập</label>
                        <input asp-for="FilePath" class="form-control" placeholder="Link hoặc tên file" />
                        <span asp-validation-for="FilePath" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Question" class="form-label">Câu hỏi</label>
                        <textarea asp-for="Question" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Question" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CorrectAnswer" class="form-label">Đáp án đúng</label>
                        <input asp-for="CorrectAnswer" class="form-control" />
                        <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Deadline" class="form-label">Hạn nộp</label>
                        <input asp-for="Deadline" class="form-control" type="date" />
                        <span asp-validation-for="Deadline" class="text-danger"></span>
                    </div>

                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Thêm mới</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>
