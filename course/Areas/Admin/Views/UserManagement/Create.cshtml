@model course.Models.User

@{
    ViewData["Title"] = "Thêm người dùng mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content" style="margin-left:47px;width: 92%;">
    <div class="container-fluid pt-4 px-4" style="max-width:800px; padding-bottom:100px;">

        <h2 class="text-primary mb-4">➕ Thêm người dùng mới</h2>

        <div class="bg-white p-4 rounded shadow">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label class="form-label"><strong>Họ và tên</strong></label>
                    <input asp-for="FullName" class="form-control" required>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Email</strong></label>
                    <input asp-for="Email" type="email" class="form-control" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Mật khẩu</strong></label>
                    <input type="password" name="password" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Vai trò</strong></label>
                    <select asp-for="Role" class="form-select" required>
                        @foreach (var role in ViewBag.Roles)
                        {
                            <option value="@role">
                                @(role == "Admin" ? "Quản trị viên" :
                                    role == "Instructor" ? "Giảng viên" : "Học viên")
                            </option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Avatar URL (tùy chọn)</strong></label>
                    <input asp-for="Avatar" class="form-control"
                           placeholder="/images/default-avatar.png">
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>