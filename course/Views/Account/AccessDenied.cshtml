@{
    ViewData["Title"] = "Truy cập bị từ chối";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .access-denied-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .denied-card {
        background: white;
        padding: 50px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        text-align: center;
        max-width: 600px;
    }

    .denied-icon {
        font-size: 80px;
        color: #dc3545;
        margin-bottom: 20px;
    }
</style>

<div class="access-denied-container">
    <div class="denied-card">
        <div class="denied-icon">
            <i class="fas fa-ban"></i>
        </div>
        <h1 class="text-danger mb-3">Truy cập bị từ chối!</h1>
        <p class="lead mb-4">
            Bạn không có quyền truy cập vào trang này.
            Vui lòng liên hệ quản trị viên nếu bạn nghĩ đây là lỗi.
        </p>

        <div class="mb-3">
            <strong>Vai trò hiện tại:</strong>
            <span class="badge bg-primary fs-6">
                @{
                    var role = Context.Session.GetString("Role");
                    @(role == "Admin" ? "Quản trị viên" :
                    role == "Instructor" ? "Giảng viên" :
                    role == "Student" ? "Học viên" : "Chưa đăng nhập")
                }
            </span>
        </div>

        <div class="d-flex gap-3 justify-content-center mt-4">
            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-home"></i> Trang chủ
            </a>
            @if (string.IsNullOrEmpty(role))
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-success">
                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                </a>
            }
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>