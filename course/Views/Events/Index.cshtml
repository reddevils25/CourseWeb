@model List<course.Models.Event>

<main class="main">

    <!-- Page Title -->
    <div class="page-title light-background">
        <div class="container d-lg-flex justify-content-between align-items-center">
            <h1 class="mb-2 mb-lg-0">Sự kiện</h1>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="index.html">Trang chủ</a></li>
                    <li class="current">Sự kiện</li>
                </ol>
            </nav>
        </div>
    </div><!-- End Page Title -->
    <!-- Courses Events Section -->
    <section id="courses-events" class="courses-events section">

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row">

                <div class="col-lg-8">
                    @foreach(var item in Model){
                        <article class="event-card" data-aos="fade-up" data-aos-delay="200">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <div class="event-image">
                                        <img src="@item.Image" class="img-fluid" alt="Event Image">
                                        <div class="date-badge">
                                            <span class="day">15</span>
                                            <span class="month">Dec</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="event-content">
                                        <div class="event-meta">
                                            <span class="time"><i class="bi bi-clock"></i> @item.TimeFrom Sáng - @item.TimeTo Chiều</span>
                                            <span class="location"><i class="bi bi-geo-alt"></i> @item.Location</span>
                                        </div>
                                        <h3 class="event-title">
                                            <a href="#">@item.Title</a>
                                        </h3>
                                        <p class="event-description">@item.Description</p>
                                        <div class="event-footer">
                                            <div class="instructor">
                                                <img src="@item.Instructor.User.Avatar" alt="Instructor" class="instructor-avatar">
                                                <span>@item.Instructor.User.FullName</span>
                                            </div>
                                            <div class="event-price">
                                                <span class="price">@item.Price</span>
                                            </div>
                                        </div>
                                        <div class="event-actions">
                                            <a href="#" class="btn btn-primary">Đăng ký ngay</a>
                                            <a href="#" class="btn btn-outline">Tìm hiểu thêm</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    }
                    
                    <nav class="pagination-wrapper" data-aos="fade-up" data-aos-delay="500">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#"><i class="bi bi-chevron-left"></i></a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a>
                            </li>
                        </ul>
                    </nav>

                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">

                    <form method="get" asp-action="Index" class="search-form">
                        <input type="text" name="searchTerm"
                               value="@Context.Request.Query["searchTerm"]"
                               placeholder="Tìm kiến sự kiện..." class="form-control">

                        <button type="submit" class="search-btn">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

