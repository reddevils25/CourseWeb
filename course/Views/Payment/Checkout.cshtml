@model Course

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <i class="bi bi-credit-card-2-front mb-2" style="font-size: 2.5rem;"></i>
                    <h3 class="mb-0 fw-bold">Thanh toán khóa học</h3>
                </div>

                <div class="card-body p-4">
                    <!-- Thông tin khóa học -->
                    <div class="mb-4">
                        <h5 class="text-muted mb-2">Khóa học</h5>
                        <h4 class="fw-bold text-dark">@Model.Title</h4>
                    </div>

                    <!-- Số tiền -->
                    <div class="alert alert-info d-flex justify-content-between align-items-center mb-4">
                        <span class="fs-6">Số tiền thanh toán:</span>
                        <span class="fs-4 fw-bold text-primary">@Model.Price $</span>
                    </div>

                    <hr class="my-4">

                    <!-- QR Code -->
                    <div class="text-center mb-4">
                        <h5 class="mb-3">
                            <i class="bi bi-qr-code me-2"></i>Quét mã QR để thanh toán
                        </h5>
                        <div class="d-inline-block p-3 bg-light rounded shadow-sm">
                            <img width="300"
                                 class="img-fluid"
                                 src="https://img.vietqr.io/image/MB-123456789-compact2.png?amount=@Model.Price&addInfo=KHOAHOC_@Model.CourseId&accountName=TRUNG TAM DAO TAO"
                                 alt="QR Code thanh toán" />
                        </div>
                    </div>

                    <!-- Nội dung chuyển khoản -->
                    <div class="alert alert-warning mb-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            <div class="flex-grow-1">
                                <small class="d-block mb-1">Nội dung chuyển khoản:</small>
                                <strong class="fs-6">KHOAHOC_@Model.CourseId</strong>
                            </div>
                            <button class="btn btn-sm btn-outline-dark" onclick="copyContent()">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Form xác nhận -->
                    <form asp-action="Confirm" method="post">
                        <input type="hidden" name="courseId" value="@Model.CourseId" />
                        <button type="submit" class="btn btn-success w-100 py-3 fw-bold">
                            <i class="bi bi-check-circle me-2"></i>Tôi đã thanh toán
                        </button>
                    </form>

                    <p class="text-center text-muted mt-3 mb-0">
                        <small>
                            <i class="bi bi-shield-check me-1"></i>
                            Giao dịch được mã hóa và bảo mật
                        </small>
                    </p>
                </div>
            </div>

            <!-- Hướng dẫn -->
            <div class="card mt-4 border-0 bg-light">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-lightbulb me-2 text-warning"></i>Hướng dẫn thanh toán
                    </h6>
                    <ol class="mb-0 ps-3">
                        <li class="mb-2">Mở ứng dụng ngân hàng của bạn</li>
                        <li class="mb-2">Quét mã QR hoặc chuyển khoản theo thông tin</li>
                        <li class="mb-2">Nhập đúng nội dung chuyển khoản</li>
                        <li>Nhấn "Tôi đã thanh toán" để hoàn tất</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function copyContent() {
        const content = 'KHOAHOC_@Model.CourseId';
        navigator.clipboard.writeText(content).then(() => {
            alert('Đã sao chép nội dung chuyển khoản!');
        });
    }
</script>

<style>
    .card {
        transition: transform 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
</style>